public class Summation
{
    public void suming(integer n)
    {
        integer sum = 0;
        for (integer index =0; index <= n; index++)
        {
            sum = sum + index ;
            system.debug(sum);
        }
        system.debug(sum);
     }
}

/*
Summation s = new Summation();
s.suming(10);
*/